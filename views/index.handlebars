<!--  ./views/index.handlebars -->
<div class="container py-5">
    <div class="row">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h3 class="d-flex justify-content-center align-items-center font-weight-bolder">
                        你想對誰說幹話?
                        <i class="fas fa-bullhorn ml-3"></i>
                        <i class="fas fa-bullhorn"></i>
                        <i class="fas fa-bullhorn"></i>
                    </h3>
                    <hr>
                    <form method="POST" action="/">
                        <div class="d-flex justify-content-around">
                            <div class="card mx-3 shadow" style="width: 18rem;">
                                <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
                                    style="width: 100%; height: 250px; object-fit: cover" class="card-img-top" alt="image">
                                <div class="card-body row justify-content-center align-items-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="occupation" id="engineer"
                                            value="engineer" {{#checkIfSame occupation 'engineer'}} checked {{/checkIfSame}}>
                                        <label class="form-check-label" for="exampleRadios1" >
                                            工程師
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="card mx-3 shadow" style="width: 18rem;">
                                <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
                                    style="width: 100%; height: 250px; object-fit: cover" class="card-img-top " alt="image">

                                <div class="card-body row justify-content-center align-items-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="occupation" id="designer"
                                            value="designer"{{#checkIfSame occupation 'designer'}} checked {{/checkIfSame}}>
                                        <label class="form-check-label" for="exampleRadios2">
                                            設計師
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="card mx-3 shadow" style="width: 18rem;">
                                <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
                                    style="width: 100%; height: 250px; object-fit: cover" class="card-img-top " alt="image">
                                <div class="card-body row justify-content-center align-items-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="occupation"
                                            id="entrepreneur" value="entrepreneur" {{#checkIfSame occupation 'entrepreneur'}} checked {{/checkIfSame}}>
                                        <label class="form-check-label" for="exampleRadios3">
                                            創業家
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-row my-4 mx-3">
                            <button class="btn btn-success mr-5" type="submit">產生幹話</button>
                            <div class="col-xs-12 col-sm-6 col-md-8">
                                <div type="text" name="excludeCharacters" class="form-control" id="exclude-characters">
                                    {{#if trashtalk}}
                                    <h6>{{trashtalk}}</h6>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>